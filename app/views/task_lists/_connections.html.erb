<div class="light-box" id="edit_task_list" data-id="<%= @task_list.id %>">
  <div class="title">
     <h3>Edit List</h3>
  </div>
  <div class="sub-title">
    <h4><%=h @task_list.title %></h4>
  </div>
  <div class="tools">
    <div class="filter">
      <a href="#" class="current"><span class="end"><span class="start">All</span></span></a>
      <a href="#"><span class="end"><span class="start">Selected (<%= @task_list.editors.count %>)</span></span></a>
    </div>
    <div class="search">
      <div class="search-box">
        <input type="text"  class="search-text" value="Search ..." />
        <input type="submit" value="Go" class="search-btn" />
      </div>
    </div>
    <div class="clear"></div>
  </div>  
  <div class="people-list-scroll">
    <ul class="people-list">
      <%- current_user.accepted_friends.each do |user| -%>
      <li class="<%= 'state-2' if @task_list.editor?(user) %>" data-uid="<%= user.id %>">
        <div class="img"><img src="/images/sample_people_list.jpg" alt="<%=h user.formatted_name %>" /></div>
        <div class="details">
          <span class="name"><%=h user.formatted_name %></span>
          <span class="group">VCU</span>
        </div>
      </li>
      <%- end -%>
    </ul>
  </div>
  <div class="action">
    <input type="button" value="Save List" class="lightbox-submit" />
    <input type="button" value="Cancel"  class="lightbox-cancel" />
  </div>
</div>


<script type="text/javascript" charset="utf-8">
	$j(document).ready(editTaskListEvents);
</script>







  
